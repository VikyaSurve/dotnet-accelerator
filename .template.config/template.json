{
  "$schema": "http://json.schemastore.org/template",
  "author": "Andrew Stakhov",
  "description": "An enterprise template for building .NET applications in C#",
  "classifications": [
    "WebAPI"
  ],
  "name": "Tanzu .NET Web API",
  "identity": "Tanzu.Net.WebApi",
  "groupIdentity": "Tanzu.Net",
  "shortName": "tanzu-webapi",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "DotnetAccelerator",
  "preferNameDirectory": true,
  "symbols": {
    "database": {
      "type": "parameter",
      "datatype": "text",
      "choices": [
        {
          "choice": "postgresql",
          "description": "PostgreSQL"
        },
        {
          "choice": "mysql",
          "description": "MySQL"
        }
      ],
      "defaultValue": "postgresql",
      "description": "The type of database to use",
      "label": "Database",
      "isRequired": true
    },
    "postgresql": {
      "type": "computed",
      "value": "(database ==\"postgresql\")"
    },
    "mysql": {
      "type": "computed",
      "value": "(database ==\"mysql\")"
    },
    "configserver": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "label": "Config Server",
      "description": "Enable config server integration",
      "isRequired": true
    },
    "enableSecurity": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "label": "Enable Security",
      "description": "Enable security via JWT resource server",
      "isRequired": true
    }
  },
  "sources": [{
    "modifiers": [
      {
        "condition": "!enableSecurity",
        "exclude": ["src/DotnetAccelerator/Security/**"]
      },
      {
        "condition": "!mysql",
        "exclude": ["**/*MySQL*"]
      },
      {
        "condition": "!postgresql",
        "exclude": ["**/*PostgreSQL*"]
      }
    ]
  }],
  "specialCustomOperations": {
    "**/*.yaml": {
      "operations": [
        {
          "configuration": {
            "actionableElse": [
              "#else"
            ],
            "actionableElseif": [
              "#elseif"
            ],
            "actionableIf": [
              "#if"
            ],
            "actions": [
              "pseudoComment"
            ],
            "endif": [
              "#endif"
            ],
            "trim": "true",
            "wholeLine": "true"
          },
          "type": "conditional"
        },
        {
          "configuration": {
            "id": "pseudoComment",
            "original": "##",
            "replacement": ""
          },
          "type": "replacement"
        }
      ]
    }
  }
}